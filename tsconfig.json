{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "compileOnSave": true,
}